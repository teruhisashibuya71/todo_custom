<div class="listnewPage">
  <div class="container">
    <!--formタグタグでインスタンス変数を利用するので、newメソッドでは空のインスタンス変数を用意しなくてはならない-->
    <%= form_with model: @list, url: { action: :create }, class: "new_list", local: true do |f| %>
      
      <!--エラーメッセージ用-->
      <% if @list.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: "form-control listName", placeholder: "リスト名を入力してください" %>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>