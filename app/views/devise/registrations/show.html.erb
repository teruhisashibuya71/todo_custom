<div class="container mt-5">
  <h1 class="form-title text-center">アカウント情報詳細画面</h1>
    
    <!--form の引数解説-->
    <!--resouce →   -->
    <!--url → form指定のボタンを押した時の移動先-->
    <!--html → HTTPメソッドを記入 get postなど-->
    <%= form_for(resource, as: resource_name, url: edit_user_registration_path(resource_name), html: { method: :get }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class = 'form-group mt-4'>
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, readonly: true, class: "form-control" %>
        </div>
        <div class = 'form-group mt-4'>
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, readonly: true, class: "form-control" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        <div class="useredit-submit mt-4">
          <%= f.submit "編集する", class: "btn btn-primary w-25" %>
          <%= link_to  "トップページへ", root_path, class: "link-below-user-form ml-4" %>
        </div>
      <% end %>
      
    
</div>